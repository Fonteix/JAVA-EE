<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>connexion</servlet-name>
        <servlet-class>Servlet.connexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validationLogin</servlet-name>
        <servlet-class>Servlet.validationLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deconnexion</servlet-name>
        <servlet-class>Servlet.deconnexion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validationInscription</servlet-name>
        <servlet-class>Servlet.validationInscription</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>infoCompte</servlet-name>
        <servlet-class>Servlet.infoCompte</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>connexion</servlet-name>
        <url-pattern>/connexion</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>inscription</servlet-name>
        <servlet-class>Servlet.inscription</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inscription</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>accueil</servlet-name>
        <servlet-class>Servlet.accueil</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>accueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>accueil</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>validationLogin</servlet-name>
        <url-pattern>/validationLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deconnexion</servlet-name>
        <url-pattern>/deconnexion</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>panier</servlet-name>
        <servlet-class>Servlet.panier</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>panier</servlet-name>
        <url-pattern>/panier</url-pattern>
    </servlet-mapping>
    <!--articles-->
    <servlet>
        <servlet-name>Articles</servlet-name>
        <servlet-class>Servlet.Articles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Articles</servlet-name>
        <url-pattern>/Articles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validationInscription</servlet-name>
        <url-pattern>/validationInscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>infoCompte</servlet-name>
        <url-pattern>/infoCompte</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
